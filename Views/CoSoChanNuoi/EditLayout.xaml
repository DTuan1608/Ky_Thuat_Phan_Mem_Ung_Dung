<UserControl x:Class="KTPMUD.Views.CoSoChanNuoi.EditLayout"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KTPMUD.Views.CoSoChanNuoi"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="LightBlue"
             >
    <Grid>
        <StackPanel>
            <TextBlock FontSize="24">
                Tra cứu về cơ sở chăn nuôi
            </TextBlock>
            <StackPanel>
                <Label>Tên</Label>
                <TextBox Text="{Binding Path=Name, Mode=TwoWay}" />
            </StackPanel>
            <StackPanel>
                <Label>Địa chỉ</Label>
                <TextBox Text="{Binding Path=Address, Mode=TwoWay}" />
            </StackPanel>
            <StackPanel>
                <Label>Số Điện Thoại</Label>
                <TextBox Text="{Binding Path=Phone, Mode=TwoWay}" />
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
