<UserControl x:Class="KTPMUD.Views.CoSoChanNuoi.CoSoChanNuoiLayout"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KTPMUD.Views.CoSoChanNuoi"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="White"
             Name="CoSoChanNuoi">
    <Grid>
        <StackPanel>
            <DataGrid x:Name="DataGrid" AutoGenerateColumns="True" 
                      Margin="0,0,0,10" Height="300" ItemsSource="{Binding Items}" />
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Thêm" Width="100"  />
                <Button Content="Sửa" Width="100"  />
                <Button Content="Xóa" Width="100"  />
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
