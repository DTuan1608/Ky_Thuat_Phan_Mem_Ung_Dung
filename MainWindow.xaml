            <ColumnDefinition Width="319*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="2" Grid.Row="1" Height="466" VerticalAlignment="Top" Margin="0,1,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="700*"/>
                <ColumnDefinition Width="83*"/>
            </Grid.ColumnDefinitions>
